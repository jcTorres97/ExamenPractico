@model Domain.Objetos.Sucursal

@{ ViewData["Title"] = "Editar";
                ViewData["Section"] = "Sucursal"; }

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<link href="~/assets/vendors/general/bootstrap-select/dist/css/bootstrap-select.css" rel="stylesheet" type="text/css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/css/select2.min.css" rel="stylesheet" type="text/css" />

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@ViewData["Title"] @ViewData["Section"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<form method="post" asp-action="Edit">
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">
                    <input hidden asp-for="Id" />
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red">*</font> Nombre</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Ingresa el nombre" required autocomplete="off" data-rule-maxlength="150" />
                        <span asp-validation-for="Name" class="form-text text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red">*</font> Teléfono</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Ingresa el teléfono" required autocomplete="off" data-rule-maxlength="150" />
                        <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <label><font color="red">*</font> Dirección</label>
                        <input type="text" asp-for="Address" class="form-control" placeholder="Ingresa la direccion" required autocomplete="off" data-rule-maxlength="150" />
                        <span asp-validation-for="Address" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <span class="d-inline-block" tabindex="0" data-toggle="k-tooltip" data-skin="dark" title="" data-original-title="Cancelar">
            <button type="button" class="btn btn-secondary flaticon-refresh" data-dismiss="modal" title="Cancelar"> Cancelar</button>
        </span>
        <span class="d-inline-block" tabindex="0" data-toggle="k-tooltip" data-skin="dark" title="" data-original-title="Guardar">
            <button type="submit" class="btn btn-primary flaticon-folder-1" title="Guardar"> Guardar</button>
        </span>
    </div>
</form>

<script src="~/assets/vendors/general/bootstrap-select/dist/js/bootstrap-select.js" type="text/javascript"></script>
<script src="~/assets/demo/default/custom/components/forms/widgets/bootstrap-select.js" type="text/javascript"></script>

